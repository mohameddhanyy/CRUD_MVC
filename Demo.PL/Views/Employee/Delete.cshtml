@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Are You Sure Want to Delete this Employee ???? </h1>
<br />
<br />

<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-controlt" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HireDate" class="col-form-label"></label>
        <input asp-for="HireDate" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="col-form-label"></label>
    </div>

    <input type="submit" value="Delete" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Return To Employees</a>
</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}

