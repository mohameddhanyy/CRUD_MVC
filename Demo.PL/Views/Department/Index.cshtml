@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}


<h1>All Departments</h1>

 <br />
 <a asp-controller="Department" asp-action="Create" class="btn btn-outline-primary">Create New Department</a>
 <br />
 <br />

@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departmet in Model)
            {
                <tr>
                    <td>@departmet.Name</td>
                    <td>@departmet.Code</td>
                    <td>@departmet.DateOfCreation
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@departmet.Id" class="btn btn-warning">
                            <i class="fas fa-eye"> </i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@departmet.Id" class="btn btn-success">
                            <i class="fas fa-edit"> </i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@departmet.Id" class="btn btn-danger">
                            <i class="fas fa-trash"> </i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <br>
    <br>
    <div class="alert alert-info m-4">
        <h3>There is no Department</h3>
    </div>
}
