@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Details of Department</h1>

<div>
    <div class="form-group">
        <label class="col col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
    </div>

    <div class="form-group">
        <label class="col col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label class="col col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit Departments</a>

</div>


